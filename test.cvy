fun double(x) = x + x;
fun quadruple(x) = double(double(x));

fun fac1(n) = case n | 0 -> 1
                     | _ -> n * fac1(n-1);

fun fac(0) = 1
  | fac(n) = n * fac(n-1);

rec fun even(0) = True
      | even(n) = not(odd(n-1))
and fun odd(0) = False
      | odd(n) = not(even(n-1));

